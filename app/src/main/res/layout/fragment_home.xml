<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fagment.HomeFragment"
    android:layout_centerHorizontal="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="365dp"
            android:name="com.google.android.gms.maps.MapFragment"
            android:id="@+id/map"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            tools:context=".views.activity.MapsActivity"/>
        <RelativeLayout
            android:id="@+id/home_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingRight="@dimen/mainPadding"
            android:paddingLeft="@dimen/mainPadding"
            android:background="@color/colorBackgroundLight"
            android:layout_below="@+id/map"
            ></RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/btn_radius_bottom"
            android:layout_gravity="center_horizontal|bottom"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/marginButtonButtom"
            android:layout_marginRight="@dimen/marginButtonButtom"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <TextView
                style="@style/TextViewInline"
                android:text="Book now"
                android:textSize="@dimen/mainTextSizeXLarge"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="false"
                android:gravity="center_vertical"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
