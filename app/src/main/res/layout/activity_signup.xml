<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@mipmap/login_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/guestPadding"
        android:paddingRight="@dimen/guestPadding"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="40dp">

        <EditText
            style="@style/InputDefault"
            android:inputType="textPersonName"
            android:hint = "First name"
            android:id="@+id/signupFName"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp" />
        <EditText
            style="@style/InputDefault"
            android:inputType="textPersonName"
            android:hint = "Last name"
            android:id="@+id/signupLName"
            android:layout_below="@+id/signupFName"/>
        <EditText
            style="@style/InputDefault"
            android:inputType="number"
            android:id="@+id/signupPhone"
            android:layout_below="@+id/signupLName"
            android:hint="Phone Number"/>
        <EditText
            style="@style/InputDefault"
            android:inputType="textEmailAddress"
            android:id="@+id/signEmail"
            android:hint="Email"
            android:layout_below="@+id/signupPhone" />
        <EditText
            style="@style/InputDefault"
            android:inputType="textPassword"
            android:id="@+id/signupPassword"
            android:layout_below="@+id/signEmail"
            android:hint="Password"/>
        <EditText
            style="@style/InputDefault"
            android:id="@+id/signupConfirmPassword"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:layout_below="@+id/signupPassword" />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I have read and agreed to the service terms and conditions"
            android:id="@+id/signupCBAgreeTerm"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:textSize="15dp"
            android:textColor="#fff"
            android:clickable="true"
            android:singleLine="false"
            android:layout_marginTop="13.5dp"
            android:layout_below="@+id/signupConfirmPassword"
            android:layout_alignStart="@+id/signupFName"
            android:layout_marginLeft="-7dp"
            android:buttonTint="#fff"
            />
        <Button
            style="@style/MainButton"
            android:text="SIGN UP"
            android:id="@+id/btnSignUp"
            android:layout_below="@+id/signupCBAgreeTerm"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBackToSignIn"
            android:text="BACK"
            android:drawableLeft="@mipmap/ic_keyboard_backspace_white_24dp"
            android:layout_marginTop="27dp"
            android:textSize="17dp"
            android:background="@color/colorTransparent"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/signupFName"
            android:textColor="#fff"
            />
    </RelativeLayout>





</ScrollView>
