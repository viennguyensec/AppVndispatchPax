<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fagment.BookingFragment"
    android:padding="@dimen/mainPadding"
    android:layout_centerHorizontal="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="35dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/booking_section1"
            android:background="@drawable/section_radius"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingLeft="@dimen/sectionPaddingLeftRight"
            android:paddingRight="@dimen/sectionPaddingLeftRight"
            android:layout_marginBottom="@dimen/sectionMarginBottom">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:id="@+id/booking_info_item1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Pick up"
                    android:textColor="@color/colorPurple"
                    android:textSize="@dimen/mainTextSize"
                    android:id="@+id/txt1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="17 Ngo gia tu, Da Nang"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/mainTextSizeLarge"
                    android:id="@+id/booking_info_pickup"
                    android:layout_below="@+id/txt1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/colorHr"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/booking_info_item1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Drop off"
                    android:textColor="@color/colorPurple"
                    android:textSize="@dimen/mainTextSize"
                    android:id="@+id/txt2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="17 Ngo gia tu, Da Nang"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/mainTextSizeLarge"
                    android:id="@+id/booking_info_dropoff"
                    android:layout_below="@+id/txt2"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/colorHr"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/booking_section2"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="@dimen/sectionPaddingLeftRight"
            android:paddingLeft="@dimen/sectionPaddingLeftRight"
            android:layout_marginBottom="@dimen/sectionMarginBottom"
            android:layout_below="@+id/booking_section1"
            android:background="@drawable/section_radius">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
                <TableRow>
                    <TextView
                        style="@style/TextViewInline"
                        android:text="Price"/>
                    <TextView
                        style="@style/TextViewInline"
                        android:text=":"
                        android:layout_width="20dp"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        style="@style/TextViewInline"
                        android:text="17-19$"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow>
                    <TextView
                        style="@style/TextViewInline"
                        android:text="Distance"/>
                    <TextView
                        style="@style/TextViewInline"
                        android:text=":"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="20dp"/>
                    <TextView
                        style="@style/TextViewInline"
                        android:text="5.9 km"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow>
                    <TextView
                        style="@style/TextViewInline"
                        android:text="Payment"/>
                    <TextView
                        style="@style/TextViewInline"
                        android:text=":"
                        android:layout_width="20dp"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        style="@style/TextViewInline"
                        android:text="Cash"
                        android:textStyle="bold"/>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
        <EditText
            style="@style/InputInApp"
            android:id="@+id/booking_input1"
            android:layout_height="90dp"
            android:layout_below="@+id/booking_section2"
            android:hint="Note for the iiriver"
            android:layout_marginBottom="@dimen/sectionMarginBottom"/>
        <EditText
            style="@style/InputInApp"
            android:layout_height="55dp"
            android:layout_below="@+id/booking_input1"
            android:hint="Promo Code"
            android:layout_marginBottom="100dp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/btn_radius_bottom"
            android:layout_gravity="center_horizontal|bottom"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/mainPadding"
            android:layout_marginRight="@dimen/mainPadding"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <TextView
                style="@style/TextViewInline"
                android:text="Confirm"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="false"
                android:gravity="center_vertical"/>
            <Button
                android:id="@+id/btn_booking_confirm"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/btn_circle_green"
                android:text="@string/icon_chevron_right"
                android:layout_marginRight="4dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
